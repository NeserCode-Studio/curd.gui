{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app-template",
  "version": "0.1.0",
  "identifier": "com.app-template.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:8888",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "app-template",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "resizable": false,
        "visible": true,
        "focus": true
      },
      {
        "label": "tray",
        "url": "/tray",
        "title": "Tray Menu",
        "skipTaskbar": true,
        "decorations": false,
        "dragDropEnabled": false,
        "center": false,
        "visible": false,
        "resizable": false,
        "width": 200,
        "height": 200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
